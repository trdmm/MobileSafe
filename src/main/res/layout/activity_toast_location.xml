<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#88f4cccc"
    tools:context="com.sat.mobilesafe.Activities.ToastLocationActivity">
<ImageView
    android:id="@+id/iv_drag"
    android:src="@drawable/drag"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" />
    <Button
        android:id="@+id/bt_top"
        android:gravity="center"
        android:text="按住提示框拖曳到任意位置"
        android:visibility="invisible"
        android:background="@drawable/call_locate_blue"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <Button
        android:id="@+id/bt_bottom"
        android:gravity="center"
        android:text="按住提示框拖曳到任意位置"
        android:visibility="visible"
        android:layout_alignParentBottom="true"
        android:background="@drawable/call_locate_blue"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
</RelativeLayout>
