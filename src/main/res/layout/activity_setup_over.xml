<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
<TextView
    android:text="手机防盗"
    style="@style/TitleStyle"/>
    <RelativeLayout
        android:padding="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:text="安全号码"
            android:layout_alignParentStart="true"
            android:textSize="25sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tv_safe_num"
            android:text="0000"
            android:textSize="25sp"
            android:layout_alignParentEnd="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <ImageView
            android:src="@drawable/listview_divider"
            android:layout_width="match_parent"
            android:layout_below="@id/tv_safe_num"
            android:layout_height="wrap_content" />
    </RelativeLayout>
    <RelativeLayout
        android:padding="5dp"
        android:layout_gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:text="防盗保护是否开启"
            android:textSize="25sp"
            android:gravity="center_vertical"
            android:layout_alignParentStart="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <ImageView
            android:id="@+id/iv_lock"
            android:src="@drawable/lock"
            android:layout_alignParentEnd="true"
            android:layout_width="30dp"
            android:layout_height="30dp" />
        <ImageView
            android:src="@drawable/listview_divider"
            android:layout_width="match_parent"
            android:paddingTop="3dp"
            android:layout_below="@id/iv_lock"
            android:layout_height="wrap_content" />
    </RelativeLayout>
    <TextView
        android:id="@+id/re_set"
        android:text="重新进入设置向导"
        android:textSize="25sp"
        android:background="@drawable/selector_reset_setup_tv_bg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <TextView
        android:text="功能简介"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="25sp"
        android:padding="5dp"
        android:background="@android:color/darker_gray"/>
    <TextView
        android:text="GPS追踪:#*location*#"
        android:textSize="18sp"
        android:textColor="#000"
        android:gravity="center_vertical"
        android:drawableLeft="@android:drawable/star_big_on"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <TextView
        android:text="播放报警音乐:#*alarm*#"
        android:textSize="18sp"
        android:textColor="#000"
        android:gravity="center_vertical"
        android:drawableLeft="@android:drawable/star_big_on"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <TextView
        android:text="远程删除数据:#*wipedata*#"
        android:textSize="18sp"
        android:textColor="#000"
        android:gravity="center_vertical"
        android:drawableLeft="@android:drawable/star_big_on"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <TextView
        android:text="远程锁屏:#*lockscreen*#"
        android:textSize="18sp"
        android:textColor="#000"
        android:gravity="center_vertical"
        android:drawableLeft="@android:drawable/star_big_on"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
</LinearLayout>